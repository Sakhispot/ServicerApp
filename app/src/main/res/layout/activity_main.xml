<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/wholeScreen"
    tools:context=".MainActivity">



    <TextView
        android:id="@+id/logo_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:text="ServiCer"
        android:textSize="46sp"
        android:textColor="@color/text"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo_txt"
        android:layout_centerHorizontal="true"
        android:text="Services in power"
        android:textColor="@color/status"
        android:textSize="14sp"/>

    <EditText
        android:id="@+id/username_edt"
        android:layout_centerInParent="true"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:hint="Username"
        android:inputType="text"
        android:textColorHint="@color/hintText"
        android:backgroundTint="@color/editText"
        android:textColor="@color/text"/>

    <EditText
        android:id="@+id/phone_edt"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_below="@id/username_edt"
        android:layout_centerHorizontal="true"
        android:inputType="phone"
        android:hint="Phone number"
        android:textColorHint="@color/hintText"
        android:backgroundTint="@color/editText"
        android:textColor="@color/text"/>

    <Button
        android:id="@+id/sign_in_btn"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/phone_edt"
        android:layout_marginTop="10dp"
        android:text="sign in"
        android:textSize="20sp"
        android:textColor="@color/text"
        android:background="@drawable/my_button_bg"
        android:onClick="btnClick_SignIn"
        />

    <TextView
        android:id="@+id/sign_up_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign up"
        android:textColor="@color/hintText"
        android:textSize="18sp"
        android:layout_below="@id/sign_in_btn"
        android:layout_alignEnd="@id/sign_in_btn"
        android:layout_alignRight="@id/sign_in_btn"
        android:layout_marginTop="5dp"
        android:clickable="true"
        android:onClick="btnClick_SignUp"
         />




</RelativeLayout>